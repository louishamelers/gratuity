<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:paddingBottom="28dp">

        <TextView
            android:id="@+id/app_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/medium"
            android:animateLayoutChanges="true"
            android:fontFamily="sans-serif"
            android:gravity="start"
            android:text="@string/app_name"
            android:textColor="?colorOnBackground"
            android:textSize="32sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/definition_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:animateLayoutChanges="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/app_title">

            <TextView
                android:id="@+id/sound_groups"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/medium"
                android:layout_marginEnd="@dimen/medium"
                android:layout_marginBottom="@dimen/medium"
                android:text="@string/sound_groups"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/pronunciation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/medium"
                android:layout_marginEnd="@dimen/medium"
                android:layout_marginBottom="@dimen/medium"
                android:text="@string/pronunciation"
                app:layout_constraintStart_toEndOf="@id/sound_groups"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/definition_number_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/medium"
                android:text="@string/definition_number_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sound_groups" />

            <TextView
                android:id="@+id/definition_value_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constrainedWidth="true"
                android:layout_margin="@dimen/medium"
                android:text="@string/definition_value_1"
                app:layout_constraintStart_toEndOf="@id/definition_number_1"
                app:layout_constraintTop_toBottomOf="@id/sound_groups"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/definition_number_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/medium"
                android:text="@string/definition_number_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/definition_value_1" />

            <TextView
                android:id="@+id/definition_value_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constrainedWidth="true"
                android:layout_margin="@dimen/medium"
                android:text="@string/definition_value_2"
                app:layout_constraintStart_toEndOf="@id/definition_number_2"
                app:layout_constraintTop_toBottomOf="@id/definition_value_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

<!--            <com.google.android.material.button.MaterialButton-->
<!--                android:id="@+id/close_definition_button"-->
<!--                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"-->
<!--                android:layout_width="52dp"-->
<!--                android:layout_height="52dp"-->
<!--                android:layout_margin="@dimen/medium"-->
<!--                android:insetLeft="0dp"-->
<!--                android:insetTop="0dp"-->
<!--                android:insetRight="0dp"-->
<!--                android:insetBottom="0dp"-->
<!--                app:icon="@drawable/ic_expand_less"-->
<!--                app:iconGravity="textStart"-->
<!--                app:iconPadding="0dp"-->
<!--                app:layout_constraintBottom_toBottomOf="parent"-->
<!--                app:layout_constraintEnd_toEndOf="parent"-->
<!--                app:layout_constraintTop_toBottomOf="@id/definition_value_2" />-->

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/border"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/amount_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/medium"
            android:text="@string/amount_label"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/definition_container" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/amount_input"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/amount_header">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/amount_edit_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:inputType="numberDecimal"
                android:minWidth="200dp"
                android:textSize="24sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/percentage_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="@dimen/medium"
            android:background="@color/backgroundHighlight"
            android:paddingBottom="@dimen/medium"
            app:layout_constraintTop_toBottomOf="@+id/amount_input">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/border"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/percentage_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/medium"
                android:text="@string/tip_percentage_label"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/tip_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/medium"
                android:gravity="center"
                app:layout_constraintEnd_toStartOf="@+id/more_tips"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/percentage_header">

                <Button
                    android:id="@+id/left_button"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/left_tip_button"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/center_button"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/center_tip_button"
                    app:layout_constraintStart_toEndOf="@id/left_button" />

                <Button
                    android:id="@+id/right_button"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/right_tip_button" />
            </com.google.android.material.button.MaterialButtonToggleGroup>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/specific_percentage_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@id/tip_percentage"
                app:layout_constraintEnd_toEndOf="@id/tip_percentage"
                app:layout_constraintStart_toStartOf="@id/tip_percentage"
                app:layout_constraintTop_toTopOf="@id/tip_percentage">

                <Button
                    android:id="@+id/percentage_minus"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:text="-" />

                <TextView
                    android:id="@+id/specific_tip"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="14dp"
                    android:gravity="center"
                    android:text="14%"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/percentage_plus"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:text="+" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <Button
                android:id="@+id/more_tips"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/medium"
                android:text="edit"
                app:layout_constraintBottom_toBottomOf="@id/tip_percentage"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tip_percentage"
                app:layout_constraintTop_toTopOf="@id/tip_percentage" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/border"
            app:layout_constraintBottom_toBottomOf="@id/percentage_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/final_amount_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium"
            android:layout_marginTop="28dp"
            android:text="@string/final_amount_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/percentage_container" />

        <TextView
            android:id="@+id/final_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/medium"
            android:text="$0.00"
            android:textColor="?colorOnBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/final_amount_label" />

        <TextView
            android:id="@+id/final_tip_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium"
            android:layout_marginTop="@dimen/medium"
            android:text="@string/final_tip_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/final_amount_label" />

        <TextView
            android:id="@+id/final_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/medium"
            android:text="$0.00"
            android:textColor="?colorOnBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/final_tip_label" />

        <View
            android:id="@+id/final_hr"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="@dimen/medium"
            android:background="@color/border"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/final_tip_label" />

        <TextView
            android:id="@+id/final_total_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium"
            android:layout_marginTop="@dimen/medium"
            android:text="@string/final_total_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/final_hr" />

        <TextView
            android:id="@+id/final_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/medium"
            android:text="$0.00"
            android:textColor="?colorOnBackground"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/final_total_label" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>